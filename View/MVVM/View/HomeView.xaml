<UserControl x:Class="View.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:language="clr-namespace:EasySaveApp.Properties.Langs" 
             xmlns:viewmodel="clr-namespace:View.MVVM.ViewModel" 
             xmlns:view="clr-namespace:View.MVVM.View" d:DataContext="{d:DesignInstance Type=view:HomeView}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">



    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{x:Static language:Lang.HomeDashBoard}"
                   Foreground="#ccd7ff"
                   FontSize="26"
                   HorizontalAlignment="Left"
                   Margin="50 0 0 20"/>

            <Grid Grid.Row="1" Margin="50 20 15 40" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Margin="0 0 25 0" Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#827BFF" Offset="0" />
                            <GradientStop Color="#D9B5FF" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,180,140"/>
                    </Border.Clip>

                    <Grid>
                        <Ellipse Width="230" Height="230" Margin="0 -130 -90 0" HorizontalAlignment="Right">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                    <GradientStop Color="#B298FD" Offset="0" />
                                    <GradientStop Color="#E4BBFF" Offset="1" />
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Image Source="C:\Users\ayman\source\repos\EasySave\View\Images\BriefCase.png" Margin="0 0 25 55" Width="60" Height="60"  HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <StackPanel Margin="15 0 0 20" VerticalAlignment="Bottom">
                            <TextBlock Text="{x:Static language:Lang.HomeJobs}" Foreground="#e9e9e9" FontSize="14" Width="188"/>
                            <TextBlock Text="{Binding Path= JobsNumber, UpdateSourceTrigger=PropertyChanged}"  Foreground="#ffffff" FontSize="28" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>


                <Border Margin="0 0 25 0" Grid.Column="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#FD8A87" Offset="0" />
                            <GradientStop Color="#F3AB92" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,180,140"/>
                    </Border.Clip>

                    <Grid>
                        <Ellipse Width="230" Height="230" Margin="0 -130 -90 0" HorizontalAlignment="Right">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                    <GradientStop Color="#FBD5A8" Offset="0" />
                                    <GradientStop Color="#FDB89B" Offset="1" />
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Image Source="C:\Users\ayman\source\repos\EasySave\View\Images\CompleteSave.png" Margin="0 0 25 55" Width="60" Height="60"  HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <StackPanel Margin="15 0 0 20" VerticalAlignment="Bottom">
                            <TextBlock Text="{x:Static language:Lang.MainCompleteBackUpButton}" Foreground="#e9e9e9" FontSize="14" Width="188"/>
                            <TextBlock Text="{Binding Path = CompleteSaveNumber}" Foreground="#ffffff" FontSize="28" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Margin="0 0 25 0" Grid.Column="2">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                            <GradientStop Color="#FC84CB" Offset="0" />
                            <GradientStop Color="#FC8FAE" Offset="1" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Clip>
                        <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0,0,180,140"/>
                    </Border.Clip>

                    <Grid>
                        <Ellipse Width="230" Height="230" Margin="0 -130 -90 0" HorizontalAlignment="Right">
                            <Ellipse.Fill>
                                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                                    <GradientStop Color="#FC8FAE" Offset="0" />
                                    <GradientStop Color="#FFABE6" Offset="1" />
                                </LinearGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Image Source="C:\Users\ayman\source\repos\EasySave\View\Images\Differential Save.png" Margin="0 0 25 55" Width="60" Height="60"  HorizontalAlignment="Right" VerticalAlignment="Center"/>

                        <StackPanel Margin="15 0 0 20" VerticalAlignment="Bottom">
                            <TextBlock Text="{x:Static language:Lang.MainDifferentialButton}" Foreground="#e9e9e9" FontSize="14" Width="188"/>
                            <TextBlock  Text="{Binding Path=DiffSaveNumber}" Foreground="#ffffff" FontSize="28" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>
                </Border>


            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DataGrid Style="{DynamicResource DataGridStyle1}"  x:Name="JobsGrid"  AutoGenerateColumns="False" CanUserSortColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" ItemsSource="{Binding saves}" Cursor="Hand"
                                       Background="#1F1C2E" Margin="50 0 50 0" BorderThickness="0 0 0 0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{x:Static language:Lang.HomeNameTable}" Binding="{Binding appellation}" IsReadOnly="True" Width="70" />
                        <DataGridTextColumn x:Name="PathFromColumn" Header="Source" Binding="{Binding sourcePath}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn x:Name="PathToColumn" Header="{x:Static language:Lang.HomeTargetTable}" Binding="{Binding targetPath}" IsReadOnly="True" Width="auto"/>
                    </DataGrid.Columns>

                    <DataGrid.Resources>

                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#1F1C2E" />
                            <Setter Property="BorderThickness" Value="0 0 1 1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="White"/>

                        </Style>
                        <Style BasedOn="{StaticResource {x:Type DataGridCell}}" TargetType="{x:Type DataGridCell}">
                            <Setter Property="TextBlock.TextAlignment" Value="Center" />
                            <Setter Property="Background" Value="Transparent" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>

            <ProgressBar Grid.Row="3" Minimum="0" Maximum="100" 
                        Margin="50 20 50 0 "
                        Height="40"
                        VerticalAlignment="Center"
                        x:Name="ProgressBar"
                        Value="{Binding CurrentProgress}"
                        />

            <Grid Grid.Row="4" VerticalAlignment="Center" Margin="45 20 50 0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>


                <Button Grid.Column="0" VerticalAlignment="Center"  Content="{x:Static language:Lang.HomePlayButton}"
                        BorderThickness="0 0 0 1"
                        Background="#1F1C2E"
                        Margin="5 0 5 0"
                        Padding="10"
                        Foreground="White"
                        Click="PlayButton_Click"/>

                <Button Grid.Column="1" VerticalAlignment="Center"  Content="{x:Static language:Lang.HomeStopButton}"
                        BorderThickness="0 0 0 1"
                        Background="#1F1C2E"
                        Margin="5 0 5 0"
                        Padding="10"
                        Foreground="White"
                        Click="StopButton_Click"/>

                <Button Grid.Column="2" VerticalAlignment="Center"  Content="{x:Static language:Lang.HomeBreakButton}"
                        BorderThickness="0 0 0 1"
                        Background="#1F1C2E"
                        Margin="5 0 5 0"
                        Padding="10"
                        Foreground="White" 
                        Click="BreakButton_Click"/>


                <Button Grid.Column="4" VerticalAlignment="Center"  Content="{x:Static language:Lang.SendButton}" Click="JobsButton_Click"
                        BorderThickness="0 0 0 1"
                        Background="#1F1C2E"
                        Margin="5 0 0 0"
                        Padding="10"
                        Foreground="White"/>

            </Grid>

        </Grid>
    </StackPanel>


</UserControl>
